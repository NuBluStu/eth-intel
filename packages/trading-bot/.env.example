# RPC Configuration
RPC_HTTP=http://127.0.0.1:8545
RPC_WS=ws://127.0.0.1:8546

# Database
DUCKDB_PATH=~/eth-index/eth.duckdb

# LLM Configuration
LLM_BASE_URL=http://127.0.0.1:11434/v1
LLM_MODEL=llama3.1:8b

# Trading Configuration
MAX_POSITION_SIZE_ETH=1.0
MAX_GAS_PRICE_GWEI=100
SLIPPAGE_TOLERANCE=0.03
MIN_PROFIT_THRESHOLD=0.02

# Safety
DRY_RUN_MODE=false
ENABLE_STOP_LOSS=true
STOP_LOSS_PERCENTAGE=0.1

# Copy Trading
COPY_TRADE_DELAY_BLOCKS=2
MIN_CONFIDENCE_SCORE=0.7

# Wallet Encryption Password (change this!)
WALLET_PASSWORD=your_secure_password_here